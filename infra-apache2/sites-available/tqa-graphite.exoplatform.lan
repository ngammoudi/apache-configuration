# ###################################
# This file is managed by puppet
# PLEASE DON'T MODIFY BY HAND
# ###################################
<VirtualHost *:80>

    ServerName tqa-graphite.exoplatform.lan
    ServerAlias tqa-graphite.*.exoplatform.lan
    ServerAlias tqa-graphite-*.exoplatform.lan

    ServerAdmin exo-swf@exoplatform.com

    #####################
    # Generic configuration
    #####################
    <Directory />
        Options FollowSymLinks
        AllowOverride None
    </Directory>
    
    DocumentRoot /var/www/
    <Directory /var/www/>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride None
        Order allow,deny
        allow from all
    </Directory>
    
    Alias /icons/ "/usr/share/apache2/icons/"
    <Directory "/usr/share/apache2/icons">
        Options Indexes MultiViews
        AllowOverride None
        Order allow,deny
        Allow from all
    </Directory>
    
    # don't loose time with IP address lookups
    HostnameLookups Off
    # needed for named virtual hosts
    UseCanonicalName Off
    # configures the footer on server-generated documents
    ServerSignature Off
    
    #####################
    # Error pages
    #####################
    
    #####################
    # Include configuration
    #####################
    Include /etc/apache2/includes/graphite.conf

    #####################
    # Log configuration
    #####################
    ErrorLog        ${APACHE_LOG_DIR}/tqa-graphite.exoplatform.lan-error.log
    LogLevel        warn
    RewriteLog      ${APACHE_LOG_DIR}/tqa-graphite.exoplatform.lan-rewrite.log
    RewriteLogLevel 0
    CustomLog       ${APACHE_LOG_DIR}/tqa-graphite.exoplatform.lan-access.log combined_duration
    
</VirtualHost>
